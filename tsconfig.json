    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2023",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowArbitraryExtensions": true,
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
    },
    "include": [
      "src/**/*",
      "data/**/*",
    ]
}
